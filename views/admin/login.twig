{% extends "admin/layout/login.twig" %}
{% block content %}

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card-group">
        <div class="card p-4">
          <div class="card-body text-center">
            <h1>Login</h1>
            {{error_messages}}
            <p class="text-muted">Faça login em sua conta.</p>
            <form action="./login" method="post">
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-user"></i>
                  </span>
                </div>
                <input name="username" type="text" class="form-control" placeholder="Usuário">
              </div>
              <div class="input-group mb-4">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="icon-lock"></i>
                  </span>
                </div>
                <input name="password" type="password" class="form-control" placeholder="Senha">
              </div>
              <div class="row">
                <div class="col-12">
                  <button type="submit" class="btn btn-block btn-lg btn-primary px-4">Entrar</button>
                </div>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<pre>{{ error }}</pre>

{% endblock %}
